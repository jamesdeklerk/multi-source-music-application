{
    "compilerOptions": {
        "rootDir": "src/typescript/",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outFile": "scripts.js",
        "target": "es5"
    },
    // This specifies the files and order to compile the files in.
    "files": [
        // Libraries
        "src/typescript/libraries/Publisher.ts",
        // Definitions
        "src/typescript/definitions/angular-route.d.ts",
        "src/typescript/definitions/angular.d.ts",
        "src/typescript/definitions/es6-promise.d.ts",
        "src/typescript/definitions/firebase.d.ts",
        "src/typescript/definitions/youtube.d.ts",
        // Interfaces
        "src/typescript/interfaces/IAlbum.ts",
        "src/typescript/interfaces/IArtist.ts",
        "src/typescript/interfaces/IMusicService.ts",
        "src/typescript/interfaces/IPlayerAdapter.ts",
        "src/typescript/interfaces/IServerAdapter.ts",
        "src/typescript/interfaces/IServiceDataAdapter.ts",
        "src/typescript/interfaces/ITrack.ts",
        "src/typescript/interfaces/IPlaylist.ts",
        // Player Adapters
        "src/typescript/classes/player_adapters/DeezerAdapter.ts",
        "src/typescript/classes/player_adapters/YouTubeAdapter.ts",
        // Resources
        "src/typescript/resources/Constants.ts",
        // Classes
        "src/typescript/classes/Verification.ts",
        "src/typescript/classes/Settings.ts",
        "src/typescript/classes/Player.ts",
        // Main
        "src/typescript/Main.ts"
    ],
    "exclude": [
        ".git",
        ".vscode",
        "bower_components",
        "build",
        "node_modules",
        "src/elements",
        "src/images",
        "src/scss"
    ]
}